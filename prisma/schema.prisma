generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  games         Game[] 

  @@map("user")
}

model Session {
  id        String    @id @default(cuid()) // ðŸ‘ˆ changed
  expiresAt DateTime
  token     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  ipAddress String?
  userAgent String?
  userId    String    // ðŸ‘ˆ changed
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid()) // ðŸ‘ˆ changed
  accountId             String
  providerId            String
  userId                String    // ðŸ‘ˆ changed
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String    @id @default(cuid()) // ðŸ‘ˆ changed
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("verification")
}

model Game {
  id           Int       @id @default(autoincrement()) // ðŸ‘ˆ keep as Int (custom model)
  title        String
  category     String
  difficulty   String
  environment  String
  totalPlayers Int
  questions    Json
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  userId String  // ðŸ‘ˆ changed to match User.id type
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("game")
}
